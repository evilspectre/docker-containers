<?xml version="1.0" encoding="utf-8"?>
<Container>
  <Name>Beets</Name>
  <Description>
    This is a Dockerfile for "beets" - (http://beets.radbox.org/)[br][br]
    [b][span style='color: #E80000;']Directions:[/span][/b][br]
    [b]/config[/b] : Where the config file will be created.[br]
    [b]/opt/downloads/music[/b] : Location of music.[br]
    [b]/opt/tmp[/b] : Location of incomplete downloads, or incoming downloads, or music to be tagged.[br]
    [b]EDGE Variable Case[/b] : Installs lastest version from source. [br]
  </Description>
  <Registry>https://registry.hub.docker.com/u/smdion/docker-beets/</Registry>
  <Repository>smdion/docker-beets</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8337</HostPort>
        <ContainerPort>8337</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>EDGE</Name>
      <Value></Value>
    </Variable>
  </Environment>
  <Data>
     <Volume>
      <HostDir></HostDir>
      <ContainerDir>/opt/downloads/music</ContainerDir>
      <Mode>rw</Mode>
    </Volume> 
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/opt/tmp</ContainerDir>
      <Mode>rw</Mode>
    </Volume> 
    <Volume>
      <HostDir></HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/etc/localtime</HostDir>
      <ContainerDir>/etc/localtime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Icon>http://i.imgur.com/eFuerhb.png</Icon>
  <Banner>http://i.imgur.com/eFuerhb.png</Banner>
</Container>
